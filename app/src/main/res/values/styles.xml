<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:toolbarStyle">@style/Toolbar</item>
        <item name="android:searchViewStyle">@style/Toolbar.SearchView</item>
        <item name="android:itemTextAppearance">@style/menuTextAppearance</item>
        <item name="android:itemBackground">@color/colorPrimaryLight</item>
        <item name="colorControlHighlight">@color/colorAccentLight</item>
    </style>

    <style name="Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="actionMenuTextColor">@android:color/white</item>
        <item name="android:theme">@style/ToolbarTheme</item>
    </style>

    <style name="ToolbarTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
        <item name="android:textCursorDrawable">@drawable/cursor</item>
        <item name="android:textColorHint">@color/colorPrimaryLight</item>
        <item name="searchHintIcon">@null</item>
        <item name="icon">@null</item>
    </style>

    <style name="Toolbar.SearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:hint">Поиск</item>
        <item name="android:backgroundTint">@color/colorWhite</item>
        <item name="searchHintIcon">@null</item>
    </style>

    <style name="menuTextAppearance" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">@color/colorWhite</item>
    </style>


</resources>
